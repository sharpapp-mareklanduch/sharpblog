@inject SharpBlog.Client.Services.ISettingsService settings
@model SharpBlog.Client.ViewModels.CommentFormViewModel

<div class="row">
    <div class="offset-1 col-10">
        <form asp-controller="Blog" asp-action="AddComment">
            <input asp-for="PostId" type="hidden" />
            <div class="form-group row">
                <div class="col-6">
                    <input asp-for="Name" placeholder="Author" class="form-control" />
                </div>
                <div class="col-6">
                    <input asp-for="Email" placeholder="Email" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <textarea asp-for="Content" class="form-control-lg" wrap="soft" placeholder="Comment" style="min-width: 100%"></textarea>
            </div>
            @if(settings.GetReCaptchaEnabled())
            {
                <div class="form-group">
                    <div class="g-recaptcha" data-sitekey="@settings.GetReCaptchaPublicKey()"></div>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
            <button type="submit">Send</button>
        </form>
        <hr />
    </div>
</div>